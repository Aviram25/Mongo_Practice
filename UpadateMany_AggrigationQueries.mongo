    {
        "$or": [
            { "pageCount": { "$gt": 200, "$lt": 500 } },
            { "pageCount": { "$gt": 500 } }
        ]
    },
    {
        "$addToSet": { "categories": { "$each": ["kindle", "hard bind"] } }
    }
)

