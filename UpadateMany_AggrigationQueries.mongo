// Display book name, pages, isbn number and state as “old” if book is published before 2010 otherwise display “in stock”
JavaScript

db.books.aggregate([
    {
        "$project": {
            "_id": 0,
            "title": 1,
            "pageCount": 1,
            "isbn": 1,
            "state": {
                "$cond": {
                    "if": { "$lt": ["$publishedDate", ISODate("2010-01-01T00:00:00Z")] },
                    "then": "old",
                    "else": "in stock"
                }
            }
        }
    }
])


