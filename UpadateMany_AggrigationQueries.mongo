// Display pageCount of books = (pageCount $\* 100 + ($pageCount of all books with isbn number starting with 193
JavaScript

db.books.aggregate([
    {
        "$match": {
            "isbn": { "$regex": "^193" }
        }
    },
    {
        "$project": {
            "_id": 0,
            "title": 1,
            "originalPageCount": "$pageCount",
            "calculatedPageCount": {
                "$add": [
                    { "$multiply": ["$pageCount", 100] },
                    { "$mod": ["$pageCount", 7] }
                ]
            }
        }
    }
])
// Display book code as first 3 characters of title followed by 4, 5, 6 character of isbn number
JavaScript

db.books.aggregate([
    {
        "$project": {
            "_id": 0,
            "title": 1,
            "isbn": 1,
            "bookCode": {
                "$concat": [
                    { "$substrCP": ["$title", 0, 3] }, // First 3 characters of title
                    { "$substrCP": ["$isbn", 3, 3] }   // 3 characters starting from index 3 (4th char)
                ]
            }
        }
    }
])
// Find sum, maximum, minimum of pageCount for all books
JavaScript

db.books.aggregate([
    {
        "$group": {
            "_id": null,
            "totalPageCount": { "$sum": "$pageCount" },
            "maxPageCount": { "$max": "$pageCount" },
            "minPageCount": { "$min": "$pageCount" }
        }
    }
])
// Find sum, maximum, minimum, count of pageCount for all books categorywise and arrange it on count
JavaScript

db.books.aggregate([
    { "$unwind": "$categories" }, // Deconstructs the categories array
    {
        "$group": {
            "_id": "$categories",
            "count": { "$sum": 1 },
            "totalPageCount": { "$sum": "$pageCount" },
            "maxPageCount": { "$max": "$pageCount" },
            "minPageCount": { "$min": "$pageCount" }
        }
    },
    {
        "$sort": { "count": -1 } // Arrange by count descending
    }
])


